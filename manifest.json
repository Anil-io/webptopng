{
    "manifest_version": 3,
    "name": "WEBP to JPG/PNG Converter",
    "version": "1.0",
    "description": "Convert WEBP images to JPG or PNG format via right-click.",
    "permissions": [
      "contextMenus",
      "downloads",
      "scripting",
      "activeTab"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "host_permissions": [
      "<all_urls>"
    ],
    "web_accessible_resources": [
      {
        "resources": ["convert.js"],
        "matches": ["<all_urls>"]
      }
    ],
    "icons": {
      "48": "webp.png"
    }
  }
  